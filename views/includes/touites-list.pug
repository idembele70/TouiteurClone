h1 Listes des touites
ul.list-group
 each touite in touitesAdded
  li.list-group-item.my-2.p-0(style="height:90px")
   .row.px-2
    .col-10.py-1
     img(src="/static/assets/profile-picture/"+touite.avatar class="d-inline" style="height:50px; width: 50px; border-radius: 50%")
     h6.d-inline-block.ms-4=touite.from
     h6.mt-2= touite.message
    .col-2.d-flex.justify-content-between.align-items-center
     if touite.from == username
       a(href="/touites/updateTouites/"+touite.id)
         img(src="/static/img/pen-solid.svg" class="d-inline" style="height:20px; width: 20px;")
       form(method="POST", action="/touites/deleteTouites/"+touite.id+"?_method=DELETE") 
         button(type="submit", style="background: transparent;border: none;")
          img(src="/static/img/trash-alt-solid.svg" class="d-inline" style="height:20px; width: 20px; cursor:pointer")
 