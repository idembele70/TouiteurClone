extend ../layout


block content

    h1.text-center.mt-2= addTouite ? "Ecrire un touite" : "Modifier un tweet"
    if addTouite
      form(action="/touites/addTouites", method="post", 
      class="d-flex justify-content-center align-items-center flex-column")
    input(type="text", class="form-control w-50 my-2 mx-auto", name="message" value=addTouite?"":message)
    if error
      .alert.alert-danger= error
    div.d-flex.justify-content-center.align-items-center
    if addTouite
      button(type="submit" class="btn btn-primary") Ajouter
